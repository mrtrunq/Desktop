set number
set incsearch
set expandtab
set tabstop=4
set ignorecase
set autoindent
set shiftwidth=4

let mapleader = ' '
:let g:loaded_matchparen = 1

nnoremap j gjzz
nnoremap k gkzz
vnoremap j gjzz
vnoremap k gkzz
nnoremap J 5gjzz
vnoremap J 5gjzz
nnoremap K 5gkzz
vnoremap K 5gkzz

nnoremap H 5h
vnoremap H 5h
nnoremap L 5l
vnoremap L 5l

nnoremap G Gzz
nnoremap X d^i
nnoremap U <C-r>

nnoremap n nzz
nnoremap N Nzz

nnoremap <leader>j gT
nnoremap <leader>k gt
nnoremap <leader>q :q<CR>

